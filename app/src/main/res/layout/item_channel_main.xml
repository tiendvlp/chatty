<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    >

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imgAvatar"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:src="@color/dark2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="@id/imgAvatar"
        app:layout_constraintLeft_toRightOf="@id/imgAvatar"
        app:layout_constraintTop_toTopOf="@id/imgAvatar"
        android:layout_marginLeft="10dp"
        >

        <TextView
            android:id="@+id/txtChannelTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Channel Title"
            android:textColor="@color/dark4"
            android:textSize="12sp"
            android:layout_marginBottom="3dp"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txtSenderName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sender"
                android:textColor="@color/dark2"
                android:textSize="11sp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=": "
                android:textColor="@color/dark2"
                android:textSize="11sp" />
            <TextView
                android:id="@+id/txtMessageBody"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="MessageBody"
                android:textColor="@color/dark2"
                android:textSize="11sp" />
        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>