        <com.devlogs.chatty.screen.common.customview.ImageButton
            android:id="@+id/btnIcon"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="@dimen/global_margin_horizontal"
            android:background="@null"
            android:scaleType="centerInside"
            android:src="@drawable/icon_smile"
            app:layout_constraintBottom_toBottomOf="@id/edtMessage"
            app:layout_constraintLeft_toLeftOf="parent" />

        <EditText
            android:id="@+id/edtMessage"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/circularviewbg_chatframe"
            android:backgroundTint="@color/grey_200"
            android:gravity="center|start"
            android:hint="Aa"
            android:lineSpacingExtra="1dp"
            android:layout_marginTop="20dp"
            android:maxLines="4"
            android:minLines="1"
            android:paddingLeft="12dp"
            android:paddingTop="10dp"
            android:paddingRight="12dp"
            android:paddingBottom="10dp"
            android:layout_marginBottom="20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:text="Recently I had to d to change the EditText indicator  change the EditText indicator color the EditText indicator color and, after doing that, a weird line started to appear below the indicator. How can I remove that? Code for what I've done is below."
            android:textSize="16sp"
            app:layout_constraintLeft_toRightOf="@id/btnIcon"
            app:layout_constraintRight_toLeftOf="@id/btnSend"
            app:layout_constraintTop_toTopOf="parent" />

        <com.devlogs.chatty.screen.common.customview.ImageButton
            android:id="@+id/btnSend"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginRight="@dimen/global_margin_horizontal"
            android:layout_marginBottom="5dp"
            android:background="@null"
            android:src="@drawable/icon_send"
            app:layout_constraintBottom_toBottomOf="@id/edtMessage"
            app:layout_constraintRight_toRightOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</eightbitlab.com.blurview.BlurView>
