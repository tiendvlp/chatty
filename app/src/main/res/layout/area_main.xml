<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:id="@+id/mainLayoutContainer"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@id/rdgrMain"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginBottom="10dp"
        />

    <RadioGroup
        android:id="@+id/rdgrMain"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:weightSum="2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">

        <RadioButton
            android:id="@+id/rbtnMainScreen"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:button="@null"
            android:drawableTop="@drawable/rbtnchat_background"
            android:gravity="center"
            android:text="chat"
            android:checked="true"
            android:textColor="@drawable/rbtn_text_color_black"
            android:textSize="10sp"
            android:layout_weight="1"
            android:background="@null"
            />


        <RadioButton
            android:id="@+id/rbtnAccountScreen"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:button="@null"
            android:drawableTop="@drawable/rbtnuser_background"
            android:gravity="center"
            android:text="account"
            android:textColor="@drawable/rbtn_text_color_black"
            android:textSize="10sp"
            android:layout_weight="1"
            android:background="@null"
            />
    </RadioGroup>
</androidx.constraintlayout.widget.ConstraintLayout>