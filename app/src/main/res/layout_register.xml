<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="23dp"
    android:paddingRight="23dp"
    android:paddingTop="80dp"
    >

    <TextView
        android:id="@+id/createaccount"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Create \nAccount"
        android:letterSpacing="0.04"
        android:textSize="30sp"
        android:textColor="@color/main_color"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent" />

    <EditText
        android:id="@+id/edtName"
        android:layout_width="0dp"
        android:layout_height="33dp"
        android:maxLines="1"
        android:hint="Name"
        android:textColor="@color/dark3"
        android:inputType="textEmailAddress"
        app:layout_constraintTop_toBottomOf="@+id/createaccount"
        android:textSize="16sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="43dp"
        android:textColorHint="@color/dark2"
        android:background="@null" />
    <LinearLayout
        android:id="@+id/edtNameBottom"
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_height="0.6dp"
        android:background="@color/dark2"
        android:layout_marginTop="7dp"
        app:layout_constraintTop_toBottomOf="@id/edtName"
        app:layout_constraintLeft_toLeftOf="@id/edtName"
        app:layout_constraintRight_toRightOf="@id/edtName" />

    <EditText
        android:id="@+id/edtEmail"
        android:layout_width="0dp"
        android:layout_height="33dp"
        android:maxLines="1"
        android:hint="Email"
        android:textColor="@color/dark3"
        android:inputType="textEmailAddress"
        app:layout_constraintTop_toBottomOf="@+id/edtNameBottom"
        android:textSize="16sp"
        android:layout_marginTop="20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:textColorHint="@color/dark2"
        android:background="@null" />
    <LinearLayout
        android:id="@+id/edtEmailBottom"
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_height="0.6dp"
        android:background="@color/dark2"
        android:layout_marginTop="7dp"
        app:layout_constraintTop_toBottomOf="@id/edtEmail"
        app:layout_constraintLeft_toLeftOf="@id/edtEmail"
        app:layout_constraintRight_toRightOf="@id/edtEmail" />

    <EditText
        android:id="@+id/edtPassword"
        android:layout_width="0dp"
        android:layout_height="33dp"
        android:maxLines="1"
        android:hint="Password"
        android:textColor="@color/dark3"
        android:inputType="textPassword"
        app:layout_constraintTop_toBottomOf="@+id/edtEmailBottom"
        android:textSize="16sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="25dp"
        android:textColorHint="@color/dark2"
        android:background="@null" />
    <LinearLayout
        android:id="@+id/edtPasswordBottom"
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_height="0.6dp"
        android:background="@color/dark2"
        android:layout_marginTop="7dp"
        app:layout_constraintTop_toBottomOf="@id/edtPassword"
        app:layout_constraintLeft_toLeftOf="@id/edtPassword"
        app:layout_constraintRight_toRightOf="@id/edtPassword" />

    <EditText
        android:id="@+id/edtRetypePassword"
        android:layout_width="0dp"
        android:layout_height="33dp"
        android:maxLines="1"
        android:hint="Password"
        android:textColor="@color/dark3"
        android:inputType="textPassword"
        app:layout_constraintTop_toBottomOf="@+id/edtPassword"
        android:textSize="16sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="25dp"
        android:textColorHint="@color/dark2"
        android:background="@null" />
    <LinearLayout
        android:id="@+id/edtRetypePasswordBottom"
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_height="0.6dp"
        android:background="@color/dark2"
        android:layout_marginTop="7dp"
        app:layout_constraintTop_toBottomOf="@id/edtRetypePassword"
        app:layout_constraintLeft_toLeftOf="@id/edtRetypePassword"
        app:layout_constraintRight_toRightOf="@id/edtRetypePassword" />

    <com.devlogs.chatty.screen.common.customview.ImageButton
        android:id="@+id/btnRegister"
        android:layout_width="95dp"
        android:layout_height="95dp"
        android:src="@drawable/arrow"
        android:background="@drawable/confirm1_btn"
        app:layout_constraintTop_toBottomOf="@id/edtRetypePassword"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="35dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sign Up"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@color/dark3"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="0dp"
        app:layout_constraintTop_toTopOf="@id/btnRegister"
        app:layout_constraintBottom_toBottomOf="@id/btnRegister" />

    <com.devlogs.chatty.screen.common.customview.Button
        android:id="@+id/btnSignIn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sign In"
        android:letterSpacing="0.09"
        android:textAlignment="textStart"
        android:textSize="12sp"
        android:textColor="@color/dark2"
        android:textAllCaps="false"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@null"
        />



</androidx.constraintlayout.widget.ConstraintLayout>