<?xml version="1.0" encoding="utf-8"?>
<layer-list
    xmlns:android="http://schemas.android.com/apk/res/android"
    >
    <item android:width="20dp" android:height="20dp" android:gravity="center">
        <shape android:shape="oval">
            <solid android:color="@color/main_color"></solid>
        </shape>
    </item>

    <item android:width="13dp" android:height="13dp" android:gravity="center">
        <shape android:shape="oval">
            <solid android:color="@color/white"></solid>
        </shape>
    </item>

    <item android:width="10dp" android:height="10dp" android:gravity="center">
        <bitmap android:src="@drawable/icon_yes"></bitmap>
    </item>
</layer-list>